/* Rofi theme â€” auto-generated by wallust, do not edit manually */

* {
    background:     {{background}};
    foreground:     {{foreground}};
    color0:         {{color0}};
    color1:         {{color1}};
    color2:         {{color2}};
    color3:         {{color3}};
    color4:         {{color4}};
    color5:         {{color5}};
    color6:         {{color6}};
    color7:         {{color7}};
    color8:         {{color8}};
    color9:         {{color9}};
    color10:        {{color10}};
    color11:        {{color11}};
    color12:        {{color12}};
    color13:        {{color13}};
    color14:        {{color14}};
    color15:        {{color15}};
}

window {
    width:              900px;
    border:             3px;
    border-color:       @color4;
    border-radius:      12px;
    background-color:   @background;
    padding:            0;
}

mainbox {
    background-color:   transparent;
    children:           [ inputbar, listview ];
}

inputbar {
    background-color:   @color0;
    border-radius:      12px 12px 0 0;
    padding:            12px;
    spacing:            8px;
    children:           [ prompt, entry ];
}

prompt {
    background-color:   transparent;
    text-color:         @color4;
    font:               "Geist Mono Bold 36";
}

entry {
    background-color:   transparent;
    text-color:         @foreground;
    placeholder:        "Search...";
    placeholder-color:  @color8;
    font:               "Geist Mono 36";
}

listview {
    background-color:   transparent;
    columns:            1;
    lines:              8;
    padding:            8px 0;
    fixed-height:       false;
    border:             0;
    scrollbar:          false;
}

element {
    background-color:   transparent;
    text-color:         @foreground;
    padding:            8px 12px;
    spacing:            12px;
    border-radius:      0;
}

element selected {
    background-color:   @color8;
    text-color:         @foreground;
    border-radius:      6px;
}

element-icon {
    size:               48px;
    background-color:   transparent;
}

element-text {
    background-color:   transparent;
    text-color:         inherit;
    font:               "Geist Mono 36";
    vertical-align:     0.5;
}
